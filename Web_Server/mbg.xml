<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

  <context id="DB2Tables" targetRuntime="MyBatis3">
    <commentGenerator>
	  <property name="suppressAllComments" value="true" />
	</commentGenerator>
    <!-- 配置数据库连接 -->
    <jdbcConnection 
    	driverClass="com.mysql.jdbc.Driver"
        connectionURL="jdbc:mysql://localhost:3306/noj_database"
        userId="root"
        password="">
    </jdbcConnection>

    <javaTypeResolver >
      <property name="forceBigDecimals" value="false" />
    </javaTypeResolver>

	<!-- 指定javabean生成的位置 -->
    <javaModelGenerator 
	    targetPackage="com.newoj.bean" 
	    targetProject=".\src\main\java">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

	<!-- 指定sql映射文件生成的位置 -->
    <sqlMapGenerator 
	    targetPackage="mapper"  
	    targetProject=".\src\main\resources">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>

	<!-- 指定dao接口生成的位置, mapper接口 -->
    <javaClientGenerator type="XMLMAPPER" 
	    targetPackage="com.newoj.dao"  
	    targetProject=".\src\main\java">
      <property name="enableSubPackages" value="true" />
    </javaClientGenerator>

	<!-- 指定每个表的生成策略 -->
    <table tableName="students" domainObjectName="Student"></table>
	<table tableName="contest" domainObjectName="Contest"></table>
	<table tableName="submission" domainObjectName="Submission"></table>
	<table tableName="teacher" domainObjectName="Teacher"></table>
	<table tableName="problem" domainObjectName="Problem"></table>
	<table tableName="con_pro_map" domainObjectName="ContestMap"></table>
  </context>
</generatorConfiguration>